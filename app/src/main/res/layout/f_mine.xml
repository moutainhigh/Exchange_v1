<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/dimgray_f5"
              >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@mipmap/mine_bg">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="19dp"
                    android:background="@mipmap/mine_red_top"
                    android:layout_marginTop="25dp"
                    android:text="禁止接单"/>

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="19dp"
                    android:background="@mipmap/mine_yellow_top"
                    android:layout_marginTop="44dp"
                    android:text="正常发单"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="风沙漠"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:50217"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="103dp"
                    />
                
                <LinearLayout
                    android:id="@+id/ll_active_account"
                    android:layout_width="96dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@mipmap/mine_white_corn">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@mipmap/mine_top_right_icon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="激活账户"/>
                    
                </LinearLayout>
            </RelativeLayout>


            <!-- 游戏币 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="-23dp"
                android:background="@drawable/shape_ac_input"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="23dp"
                    android:textSize="12sp"
                    android:text="游戏币"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="44dp"
                    android:textSize="12sp"
                    android:text="DDB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="23dp"
                    android:textSize="11sp"
                    android:text="DDB 1:1 CNY"/>

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="19dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="30sp"
                    android:text="0.00"/>

                <TextView
                    android:id="@+id/bt_coin_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="24dp"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:text="明细"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hository_order"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/shape_ac_input"
                android:gravity="center_vertical"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史订单"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="19dp"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="19dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/right_attr"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/shape_ac_input"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="22dp"
                        android:background="@mipmap/mine1"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="申请服务商"
                        android:layout_marginLeft="13dp"
                        android:textSize="13sp"/>
                    
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:background="@color/comment_gray"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="35dp"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/mine2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="申请服务商"
                        android:layout_marginLeft="13dp"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 必备工具 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="22dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/shape_ac_input"
                android:textSize="13sp"
                android:text="必备工具"/>
            <View
                style="@style/default_view_line"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <!-- 第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:background="@drawable/shape_ac_input"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine11"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="设备绑定"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="银行卡"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_alipay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine13"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="支付宝"/>

                </LinearLayout>
            </LinearLayout>
            <!-- 第二行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:background="@drawable/shape_ac_input"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_wechatPay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine14"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="微信"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="QQ"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="云闪付"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 第三行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="11dp"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:background="@drawable/shape_ac_input"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine21"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="实名验证"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine22"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="谷歌验证"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:textSize="11sp"
                        android:text="位置及同城匹配"/>

                </LinearLayout>
            </LinearLayout>
            <!-- 第四行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:background="@drawable/shape_ac_input"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@mipmap/mine24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="11sp"
                        android:text="邮箱认证"/>

                </LinearLayout>

                <!-- 占位 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">
                </LinearLayout>

            </LinearLayout>

            <!-- 设置 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/shape_ac_input"
                android:gravity="center_vertical"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="13sp"
                    android:textColor="#878C8FFF"
                    android:layout_marginLeft="19dp"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="19dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/right_attr"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_exit_login"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/red"
                android:gravity="center"
                android:text="退出登录"
                android:background="@drawable/shape_ac_input"/>

        </LinearLayout>

</ScrollView>