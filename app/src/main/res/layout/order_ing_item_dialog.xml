<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="40dp"
            android:text="当前接单账号："
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="20dp"
            tools:text="888/噢噢噢"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="15dp"
            android:text="商户订单/内部订单："
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="20dp"
            tools:text="2512468556321569/512369847"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#1D8DE5"
            android:layout_marginRight="15dp"
            android:text="复制"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/default_btn"
        android:layout_marginTop="30dp"
        android:text="确认收款"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:text="订单信息"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="16dp"
            android:text="订单编号"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_neutral_color_3"
            tools:text="15246321187"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="16dp"
            android:text="创建时间"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_neutral_color_3"
            tools:text="2019-12-22    18：58：25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="16dp"
            android:text="用户昵称"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_neutral_color_3"
            tools:text="*************"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="16dp"
            android:text="发单ID"
            />

        <TextView
            android:id="@+id/tv_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_neutral_color_3"
            tools:text="*******"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="16dp"
            android:text="接单ID"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_neutral_color_3"
            tools:text="******"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_gray_text"
            android:layout_marginLeft="16dp"
            android:text="支付方式"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_neutral_color_3"
            tools:text="支付宝"/>

    </LinearLayout>

</LinearLayout>