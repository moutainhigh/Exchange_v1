<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    android:padding="10dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg_wihte"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint_tv"


        android:textSize="16sp"

        android:text="累计奖励:待结金额+已结金额\n待结金额:加油服务费尚未入账可用余额中;\n已结金额:加油服务费已入账可用余额中;"

        android:textColor="@color/black_transparent_54"

        />

        <Button
            android:id="@+id/custom_dialog_btn_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/selector_orange_btn"
            android:text="我知道了"
            android:textColor="@color/white"
             />
    </LinearLayout>
</RelativeLayout>
