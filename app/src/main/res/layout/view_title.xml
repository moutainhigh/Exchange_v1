<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="48.5dp"
                android:background="@color/white"
                android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/view_left"
        style="@style/view_title_btn_style"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@null"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:src="@mipmap/navibar_normal_back"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/img_left2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@null"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:src="@mipmap/img_dialog_close"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/txt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dip"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_desc_12sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_right_new"
        style="@style/view_title_btn_style"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/view_right"
        android:background="@drawable/bg_btn_title_selector">

        <ImageView
            android:id="@+id/img_right_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/icon_go_big_white_right"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_rightTvAndIvLL"
        style="@style/view_title_btn_style"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_btn_title_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_rightIv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@null"
            android:src="@mipmap/refule_btn_icon_scan_black"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/view_rightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:textSize="@dimen/common_text_size_desc_12sp"
            android:visibility="gone"
            tools:text="加油"
            tools:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_right"
        style="@style/view_title_btn_style"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_btn_title_selector">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/back"
            android:textColor="@color/common_color_black_text_title"
            android:textSize="@dimen/common_text_size_title_16sp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            android:src="@mipmap/icon_go_big_white_right"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>


    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size_thin_1px"
        android:layout_below="@id/view_left"
        android:background="#eae0dd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/common_color_black_text_title"
            android:textSize="@dimen/common_text_size_title_view_mid"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/txt_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_btn_14sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>