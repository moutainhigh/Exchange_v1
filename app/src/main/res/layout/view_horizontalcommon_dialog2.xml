<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dig_frame"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/title_txt"
            android:textSize="16sp" />

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_c9" />

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:gravity="center"
            android:layout_margin="16dp"
            android:lineSpacingMultiplier="1.3"
            android:minHeight="48dp"
            android:textColor="@color/black_transparent_54"
            android:textSize="16sp"
            tools:text="400-809-8888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                style="@style/text_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dia_left_gray"
                android:text="取  消"
                android:textColor="@color/title_bg_gray" />

            <TextView
                android:id="@+id/confirm_btn"
                style="@style/text_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dia_right_red"
                android:text="确  定"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>