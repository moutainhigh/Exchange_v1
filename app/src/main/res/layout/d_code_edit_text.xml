<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.exchange_v1.app.view.AccountEditText
        android:id="@+id/et_code_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/code_btn"
        app:isBottomLine="false"
        app:leftIconSrc="@mipmap/setting_safe_icon"
        app:isPhone="false"/>

    <TextView
        android:id="@+id/code_btn"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_item_yellow"
        android:textColor="@color/common_main_white_color"
        android:textSize="@dimen/font_size_14"
        android:text="获取验证码"/>

    <View
        android:id="@+id/bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/et_code_input"
        android:background="@color/gray_line"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>