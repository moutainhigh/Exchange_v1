<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.exchange_v1.app.view.TitleView
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_qq"
        style="@style/register_edit_input"
        android:layout_marginTop="16dp"
        android:hint="QQ" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/register_edit_input"
        android:layout_marginTop="16dp"
        android:hint="手机号" />

    <EditText
        android:id="@+id/et_email"
        style="@style/register_edit_input"
        android:layout_marginTop="16dp"
        android:hint="邮箱" />

    <EditText
        android:id="@+id/et_password"
        style="@style/register_edit_input"
        android:layout_marginTop="16dp"
        android:hint="密码" />

    <EditText
        android:id="@+id/et_balance"
        style="@style/register_edit_input"
        android:layout_marginTop="16dp"
        android:hint="余额" />

    <TextView
        android:id="@+id/tv_account_mount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:textColor="#878C8FFF"
        android:textSize="13sp"
        tools:text="您的余额不足 10,000 DDB，请先"/>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/default_btn"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="30dp"
        android:text="我要申请"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#627176"
            android:textSize="13sp"
            android:text="服务说明："/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:textColor="#627176"
            android:textSize="11sp"
            android:text="1.搬运代理可以发展下级搬运和下级代理。"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textColor="#627176"
            android:textSize="11sp"
            android:text="2.有代理推荐ID可以提高申请成功率。"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textColor="#627176"
            android:textSize="11sp"
            android:text="3.搬运代理收益可以穿透10级下线，整体收益在总交易量的
0.1%~0.4%之间，同时每推荐一个激活搬运可以获得100~
250币奖励。"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textColor="#627176"
            android:textSize="11sp"
            android:text="4.申请代理需要1万币，申请成功后从账户中扣除，申请时
请保证余额大于1万币。"/>

    </LinearLayout>
</LinearLayout>